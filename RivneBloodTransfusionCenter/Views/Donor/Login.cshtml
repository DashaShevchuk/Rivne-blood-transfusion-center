@model RivneBloodTransfusionCenter.ViewModels.Donor.LoginViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=1,initial-scale=1,user-scalable=1" />
    <title>@ViewData["Title"] - UI</title>

    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/donor/login-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="shape1"></div>
    <div class="shape2"></div>
    <div class="d-flex justify-content-center w-100">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show position-absolute w-75" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="container">
        <form class="needs-validation" novalidate method="post" asp-controller="Donor" asp-action="Login">
            <div class="mb-3 d-flex justify-content-center">
                <h2 class="fw-bold">Увійти</h2>
            </div>
            <div class="mb-3">
                <p>У вас ще немає облікового запису? <a asp-area="" asp-controller="Donor" asp-action="Registration">Зареєструйся!</a></p>
            </div>
            <div class="mb-3 ">
                <label for="inputEmail1" class="form-label">Електронна пошта</label>
                <input asp-for="Email" name="Email" type="email" class="form-control" id="inputEmail1" required>
                <div class="invalid-feedback">
                    Це поле необхідно заповнити!
                </div>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Пароль</label>
                <input asp-for="Password" name="Password" type="password" class="form-control" id="inputPassword" required>
                <div class="invalid-feedback">
                    Це поле необхідно заповнити!
                </div>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" name="RememberMe" type="checkbox" class="form-check-input" id="checkRememberMe">
                <label class="form-check-label" for="checkRememberMe">Запам'ятати мене</label>
            </div>
            <button type="submit" class="btn btn-secondary w-100">Увійти</button>
        </form>
    </div>

    <script src="~/js/donor/form-validation.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
</body>
</html>