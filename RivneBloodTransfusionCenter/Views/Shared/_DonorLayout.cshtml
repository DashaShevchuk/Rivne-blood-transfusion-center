@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="header" class="header d-flex align-items-center">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a href="" class="logo d-flex align-items-center">
                <img src="~/src/logo/logo-no-background.svg" alt="лого" class="w-650 h-650">
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        <div class="dropdown">
                            <div class="container">
                                <img src="/src/photos/default-avatar.png" class="rounded-circle" height="40">
                            </div>
                            <ul class="dropdown-menu" style="right: 0; left: auto; width: 300px; " aria-labelledby="dropdownMenuButton1">
                                <li>
                                    <div class="card border-0">
                                        <div class="row g-0">
                                            <div class="col-3">
                                                <a class="btn btn-circle">
                                                    <img src="/src/photos/default-avatar.png" class="img-fluid" height="40" alt="Avatar">
                                                </a>
                                            </div>
                                            <div class="col-9">
                                                <div class="card-body">
                                                    <p class="card-text">@User.FindFirstValue(ClaimTypes.Email)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Мій профіль</a></li>
                                <li><a class="dropdown-item" href="#">Налаштування</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Donor" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button class="dropdown-item" type="submit"> Logout </button>
                                    </form>
                                </li>

                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
